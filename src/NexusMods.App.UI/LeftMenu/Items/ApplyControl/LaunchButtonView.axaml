<reactiveUi:ReactiveUserControl
    d:DesignHeight="88"
    d:DesignWidth="184"
    mc:Ignorable="d"
    x:Class="NexusMods.App.UI.LeftMenu.Items.LaunchButtonView"
    x:TypeArguments="items:ILaunchButtonViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:icons="clr-namespace:NexusMods.Icons;assembly=NexusMods.Icons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="clr-namespace:NexusMods.App.UI.LeftMenu.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:spinner="clr-namespace:NexusMods.App.UI.Controls.Spinner;assembly=NexusMods.App.UI"
    xmlns:progressRing="clr-namespace:NexusMods.App.UI.Controls.ProgressRing">
    <Design.DataContext>
        <items:LaunchButtonDesignViewModel />
    </Design.DataContext>


    <reactiveUi:ReactiveUserControl.Styles>

        <!-- play button styles -->
        <Style Selector="Button#LaunchButton">
            <Setter Property="Background" Value="{StaticResource NeutralStrongBrush}" />
            <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />

            <Style Selector="^:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Background" Value="{StaticResource NeutralModerateBrush}" />
                <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />
            </Style>

            <Style Selector="^:pressed /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Background" Value="{StaticResource NeutralSubduedBrush}" />
                <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />
            </Style>
            
            <Style Selector="^:disabled /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Opacity" Value="{StaticResource OpacityDisabledElement}" />
                <Setter Property="Background" Value="{StaticResource NeutralStrongBrush}" />
                <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />
            </Style>
        </Style>
        
        <Style Selector="spinner|Spinner#LaunchSpinner">
            <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />
        </Style>
        
    </reactiveUi:ReactiveUserControl.Styles>

    <StackPanel>
        <Button
            x:Name="LaunchButton"
            HorizontalAlignment="Stretch"
            Height="44"
            ToolTip.Tip="Click to Play">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="{StaticResource Spacing-2}">
                <spinner:Spinner x:Name="LaunchSpinner" IsVisible="True" Height="16" Width="16" />
                <icons:UnifiedIcon x:Name="LaunchIcon"
                                   Size="24"
                                   Value="{x:Static icons:IconValues.PlayArrow}" />
                <TextBlock x:Name="LaunchText"
                           Theme="{StaticResource TitleSMSemiTheme}"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </StackPanel>
</reactiveUi:ReactiveUserControl>
