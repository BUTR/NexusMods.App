<reactiveUi:ReactiveUserControl x:TypeArguments="items:IApplyControlViewModel" xmlns="https://github.com/avaloniaui"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:items="clr-namespace:NexusMods.App.UI.LeftMenu.Items"
                                xmlns:icons="clr-namespace:NexusMods.Icons;assembly=NexusMods.Icons"
                                xmlns:progressRing="clr-namespace:NexusMods.App.UI.Controls.ProgressRing"
                                xmlns:resources="clr-namespace:NexusMods.App.UI.Resources"
                                xmlns:navigation="clr-namespace:NexusMods.App.UI.Controls.Navigation"
                                xmlns:controls="clr-namespace:NexusMods.App.UI.Controls"
                                mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
                                x:Class="NexusMods.App.UI.LeftMenu.Items.ApplyControlView">
    <Design.DataContext>
        <items:ApplyControlDesignViewModel />
    </Design.DataContext>


    <reactiveUi:ReactiveUserControl.Styles>

        <!-- apply button styles -->

        <Style Selector="Button#ApplyButton">
            <Setter Property="Background" Value="{StaticResource PrimaryModerateBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource StrokeTranslucentWeakBrush}" />
            <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />

            <Style Selector="^:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Background" Value="{StaticResource PrimaryStrongBrush}" />
                <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />
            </Style>

            <Style Selector="^:pressed /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Background" Value="{StaticResource PrimarySubduedBrush}" />
                <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />
            </Style>
            
            <Style Selector="^:disabled /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Opacity" Value="{StaticResource OpacityDisabledElement}" />
                <Setter Property="Background" Value="{StaticResource PrimarySubduedBrush}" />
                <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />
            </Style>
        </Style>

        <!-- progress bar styles -->

        <Style Selector="ProgressBar#ProgressBarControl">
            <Setter Property="Foreground" Value="#EA580C" />
            <Setter Property="Background" Value="#33EA580C" />
            <Setter Property="Height" Value="44" />

            <!-- needs this more specific selector to override the default template values -->
            <Style Selector="^:horizontal">
                <Setter Property="MinWidth" Value="100" />
                <Setter Property="MinHeight" Value="4" />
            </Style>

            <!-- text block -->
            <Style Selector="^ /template/ LayoutTransformControl#PART_LayoutTransformControl TextBlock">
                <Setter Property="Theme" Value="{StaticResource BodySMNormalTheme}" />
                <Setter Property="Foreground" Value="{StaticResource NeutralModerateBrush}" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="TextAlignment" Value="Left" />
            </Style>
        </Style>

    </reactiveUi:ReactiveUserControl.Styles>

    <Border
        Background="{StaticResource SurfaceLowBrush}"
        CornerRadius="{StaticResource Rounded-lg}"
        Padding="12"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Bottom"
        MinHeight="68">

        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Spacing="{StaticResource Spacing-2}">

            <!-- preview changes button -->
            <navigation:NavigationControl x:Name="PreviewChangesButton"
                                          Text="{x:Static resources:Language.ApplyControlView_ViewApplyChanges}"
                                          Type="Tertiary"
                                          Fill="Weak"
                                          Size="Small"
                                          ToolTip.Tip="{x:Static resources:Language.ApplyControlView_ViewApplyChanges_ToolTip}"
                                          HorizontalAlignment="Stretch" />

            <!-- Apply button -->
            <Button x:Name="ApplyButton"
                    HorizontalAlignment="Stretch"
                    Height="44"
                    ToolTip.Tip="{x:Static resources:Language.ApplyControlView_Apply_ToolTip}"
                    >
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="{StaticResource Spacing-2}">
                    <icons:UnifiedIcon Size="24" Value="{x:Static icons:IconValues.Sync}" />
                    <TextBlock x:Name="ApplyButtonTextBlock"
                               Theme="{StaticResource TitleSMSemiTheme}"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            
            <!-- Progress bar -->
            <ProgressBar x:Name="ProgressBarControl"
                         IsIndeterminate="True"
                         ShowProgressText="True"
                         ProgressTextFormat="Applying..."
                         Minimum="0"
                         Maximum="1"
                         ToolTip.Tip="{x:Static resources:Language.ApplyControlView__ApplyingToolTip}" />

            <!-- Launch button -->
            <items:LaunchButtonView x:Name="LaunchButtonView"
                                    HorizontalAlignment="Stretch" />


        </StackPanel>
    </Border>
</reactiveUi:ReactiveUserControl>
